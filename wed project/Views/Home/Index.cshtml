@{
    ViewData["Title"] = "Home";
    var isSignedIn = User?.Identity?.IsAuthenticated ?? false;
}

<div class="row gy-4">
    <div class="col-12 col-lg-8">
        <div class="p-4 bg-light border rounded-3">
            <h1 class="display-6 mb-2">Welcome to BigShope</h1>
            <p class="lead mb-3">Manage products and categories, and check out your cart in one place.</p>
            <div class="d-flex flex-wrap gap-2">
                <a class="btn btn-primary" asp-controller="Products" asp-action="Index">Browse products</a>
                <a class="btn btn-outline-primary" asp-controller="Categories" asp-action="Index">Manage categories</a>
                <a class="btn btn-outline-secondary" asp-controller="Cart" asp-action="Index">Go to cart</a>
            </div>
        </div>
        <div class="card mt-4">
            <div class="card-header">Quick links</div>
            <div class="list-group list-group-flush">
                <a class="list-group-item list-group-item-action" asp-controller="Products" asp-action="Create">Add a product</a>
                <a class="list-group-item list-group-item-action" asp-controller="Categories" asp-action="Create">Add a category</a>
                <a class="list-group-item list-group-item-action" asp-controller="Home" asp-action="Privacy">Privacy</a>
            </div>
        </div>
    </div>
    <div class="col-12 col-lg-4">
        <div class="card">
            <div class="card-header">Account</div>
            <div class="card-body">
                @if (isSignedIn)
                {
                    <p class="mb-3">You are signed in as @User.Identity?.Name.</p>
                    <a class="btn btn-secondary" asp-area="Identity" asp-page="/Account/Manage/Index">Manage account</a>
                }
                else
                {
                    <p class="mb-3">Create an account to manage your orders and save items to your cart.</p>
                    <div class="d-flex gap-2">
                        <a class="btn btn-primary" asp-area="Identity" asp-page="/Account/Register">Register</a>
                        <a class="btn btn-outline-primary" asp-area="Identity" asp-page="/Account/Login">Login</a>
                    </div>
                }
            </div>
        </div>
    </div>
</div>
