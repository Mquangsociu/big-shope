<div class="product-left">
	@if (Model != null && Model.Any())
	{
		@foreach (var product in Model)
		{
			<div class="col-md-4 chain-grid">
				<a asp-controller="Products" asp-action="Details" asp-route-id="@product.Id">
					@if (!string.IsNullOrEmpty(product.Image))
					{
						<img class="img-responsive chain" src="~/@product.Image" alt="@product.Name" />
					}
					else
					{
						<img class="img-responsive chain" src="~/images/ch.jpg" alt="@product.Name" />
					}
				</a>
				<span class="star"> </span>
				<div class="grid-chain-bottom">
					<h6><a asp-controller="Products" asp-action="Details" asp-route-id="@product.Id">@product.Name</a></h6>
					<div class="star-price">
						<div class="dolor-grid">
							<span class="actual">$@product.Price</span>
							<span class="rating">
								<input type="radio" class="rating-input" id="rating-input-@product.Id-5" name="rating-input-@product.Id" />
								<label for="rating-input-@product.Id-5" class="rating-star1"> </label>
								<input type="radio" class="rating-input" id="rating-input-@product.Id-4" name="rating-input-@product.Id" />
								<label for="rating-input-@product.Id-4" class="rating-star1"> </label>
								<input type="radio" class="rating-input" id="rating-input-@product.Id-3" name="rating-input-@product.Id" />
								<label for="rating-input-@product.Id-3" class="rating-star"> </label>
								<input type="radio" class="rating-input" id="rating-input-@product.Id-2" name="rating-input-@product.Id" />
								<label for="rating-input-@product.Id-2" class="rating-star"> </label>
								<input type="radio" class="rating-input" id="rating-input-@product.Id-1" name="rating-input-@product.Id" />
								<label for="rating-input-@product.Id-1" class="rating-star"> </label>
							</span>
						</div>
						<a class="now-get get-cart" asp-controller="Cart" asp-action="AddToCart" asp-route-id="@product.Id">ADD TO CART</a>
						<div class="clearfix"> </div>
					</div>
				</div>
			</div>
		}
	}
	else
	{
		<div class="col-md-12">
			<p>No products available. Please add products from the admin panel.</p>
		</div>
	}
	<div class="clearfix"> </div>
</div>
