@model IEnumerable<wed_project.Models.Product>

@{
    ViewData["Title"] = "Products";
}

<!--header-->
<div class="header">
	<div class="top-header">
		<div class="container">
			<div class="top-header-left">
				<ul class="support">
					<li><a href="#"><label> </label></a></li>
					<li><a href="#">24x7 live<span class="live"> support</span></a></li>
				</ul>
				<ul class="support">
					<li class="van"><a href="#"><label> </label></a></li>
					<li><a href="#">Free shipping <span class="live">on order over 500</span></a></li>
				</ul>
				<div class="clearfix"> </div>
			</div>
			<div class="top-header-right">
				<div class="down-top">
					<select class="in-drop">
						<option value="English" class="in-of">English</option>
						<option value="Japanese" class="in-of">Japanese</option>
						<option value="French" class="in-of">French</option>
						<option value="German" class="in-of">German</option>
					</select>
				</div>
				<div class="down-top top-down">
					<select class="in-drop">
						<option value="Dollar" class="in-of">Dollar</option>
						<option value="Yen" class="in-of">Yen</option>
						<option value="Euro" class="in-of">Euro</option>
					</select>
				</div>
				<div class="clearfix"> </div>
			</div>
			<div class="clearfix"> </div>
		</div>
	</div>
	<div class="bottom-header">
		<div class="container">
			<div class="header-bottom-left">
				<div class="logo">
					<a asp-controller="Home" asp-action="Index"><img src="~/images/logo.png" alt=" " /></a>
				</div>
				<div class="search">
					<input type="text" value="" onfocus="this.value = '';" onblur="if (this.value == '') {this.value = '';}" />
					<input type="submit" value="SEARCH" />
				</div>
				<div class="clearfix"> </div>
			</div>
			<div class="header-bottom-right">
				<div class="account"><a href="/Identity/Account/Manage"><span> </span>YOUR ACCOUNT</a></div>
				@{ var isAuth = User?.Identity?.IsAuthenticated ?? false; }
				@if (!isAuth)
				{
					<ul class="login">
						<li><a href="/Identity/Account/Login"><span> </span>LOGIN</a></li> |
						<li><a href="/Identity/Account/Register">SIGNUP</a></li>
					</ul>
				}
				<div class="cart"><a asp-controller="Cart" asp-action="Index"><span> </span>CART</a></div>
				@if (isAuth)
				{
					<ul class="login">
						<li class="nav-item">
							<a href="#">ADMIN</a>
							<ul class="dropdown-menu">
								<li><a asp-controller="Categories" asp-action="Index">Categories</a></li>
								<li><a asp-controller="Products" asp-action="Admin">Products</a></li>
							</ul>
						</li>
					</ul>
				}
				<div class="clearfix"> </div>
			</div>
			<div class="clearfix"> </div>
		</div>
	</div>
</div>

<!-- start content -->
<div class="container">
	<div class="women-product">
		<div class=" w_content">
			<div class="women">
				<h4>All Products - <span>@Model.Count() items</span></h4>
			</div>
		</div>
		<!-- grids_of_4 -->
		<div class="grid-product">
			@foreach (var product in Model)
			{
				<div class="product-grid">
					<div class="content_box">
						<a asp-controller="Products" asp-action="Details" asp-route-id="@product.Id">
							<div class="left-grid-view grid-view-left">
								@if (!string.IsNullOrEmpty(product.Image))
								{
									<img src="~/@product.Image" class="img-responsive watch-right" alt="@product.Name" />
								}
								else
								{
									<img src="~/images/pic2.jpg" class="img-responsive watch-right" alt="@product.Name" />
								}
								<div class="mask">
									<div class="info">Quick View</div>
								</div>
							</div>
						</a>
						<h4><a asp-controller="Products" asp-action="Details" asp-route-id="@product.Id">@product.Name</a></h4>
						<p>@(product.Category?.Name ?? "Uncategorized")</p>
						<div class="price-cart">
							<span class="price">$@product.Price</span>
							<a class="btn btn-sm btn-success" asp-controller="Cart" asp-action="AddToCart" asp-route-id="@product.Id">
								Add to Cart
							</a>
						</div>
					</div>
				</div>
			}
			<div class="clearfix"> </div>
		</div>
	</div>
</div>

