@model wed_project.Models.Product

@{
    ViewData["Title"] = "Product Details";
}

<!--header-->
<div class="header">
	<div class="top-header">
		<div class="container">
			<div class="top-header-left">
				<ul class="support">
					<li><a href="#"><label> </label></a></li>
					<li><a href="#">24x7 live<span class="live"> support</span></a></li>
				</ul>
				<ul class="support">
					<li class="van"><a href="#"><label> </label></a></li>
					<li><a href="#">Free shipping <span class="live">on order over 500</span></a></li>
				</ul>
				<div class="clearfix"> </div>
			</div>
			<div class="top-header-right">
				<div class="down-top">
					<select class="in-drop">
						<option value="English" class="in-of">English</option>
						<option value="Japanese" class="in-of">Japanese</option>
						<option value="French" class="in-of">French</option>
						<option value="German" class="in-of">German</option>
					</select>
				</div>
				<div class="down-top top-down">
					<select class="in-drop">
						<option value="Dollar" class="in-of">Dollar</option>
						<option value="Yen" class="in-of">Yen</option>
						<option value="Euro" class="in-of">Euro</option>
					</select>
				</div>
				<div class="clearfix"> </div>
			</div>
			<div class="clearfix"> </div>
		</div>
	</div>
	<div class="bottom-header">
		<div class="container">
			<div class="header-bottom-left">
				<div class="logo">
					<a asp-controller="Home" asp-action="Index"><img src="~/images/logo.png" alt=" " /></a>
				</div>
				<div class="search">
					<input type="text" value="" onfocus="this.value = '';" onblur="if (this.value == '') {this.value = '';}" />
					<input type="submit" value="SEARCH" />
				</div>
				<div class="clearfix"> </div>
			</div>
			<div class="header-bottom-right">
				<div class="account"><a asp-area="Identity" asp-page="/Account/Manage/Index"><span> </span>YOUR ACCOUNT</a></div>
				@{ var isAuth = User?.Identity?.IsAuthenticated ?? false; }
				@if (!isAuth)
				{
					<ul class="login">
						<li><a asp-area="Identity" asp-page="/Account/Login"><span> </span>LOGIN</a></li> |
						<li><a asp-area="Identity" asp-page="/Account/Register">SIGNUP</a></li>
					</ul>
				}
				<div class="cart"><a asp-controller="Cart" asp-action="Index"><span> </span>CART</a></div>
				@if (isAuth)
				{
					<ul class="login">
						<li class="nav-item">
							<a href="#">ADMIN</a>
							<ul class="dropdown-menu">
								<li><a asp-controller="Categories" asp-action="Index">Categories</a></li>
								<li><a asp-controller="Products" asp-action="Admin">Products</a></li>
							</ul>
						</li>
					</ul>
				}
				<div class="clearfix"> </div>
			</div>
			<div class="clearfix"> </div>
		</div>
	</div>
</div>

<!---->
<div class="container">
	<div class="single_top">
		<div class="single_grid">
			<div class="grid images_3_of_2">
				<div class="product-image">
					@if (!string.IsNullOrEmpty(Model.Image))
					{
						<img class="img-responsive" src="~/@Model.Image" alt="@Model.Name" style="max-width: 100%;" />
					}
					else
					{
						<img class="img-responsive" src="~/images/si4.jpg" alt="@Model.Name" style="max-width: 100%;" />
					}
				</div>
				<div class="clearfix"> </div>
			</div>
			<div class="desc1 span_3_of_2">
				<h4>@Model.Name</h4>
				<div class="cart-b">
					<div class="left-n ">$@Model.Price</div>
					<a class="now-get get-cart-in" asp-controller="Cart" asp-action="AddToCart" asp-route-id="@Model.Id">ADD TO CART</a>
					<div class="clearfix"></div>
				</div>
				<h6>Category: @(Model.Category?.Name ?? "Uncategorized")</h6>
				<p>
					This is a high-quality product from our @(Model.Category?.Name ?? "collection"). 
					Available at a great price of $@Model.Price. 
					Add to cart now and enjoy our fast shipping!
				</p>
				<div class="share">
					<h5>Share Product :</h5>
					<ul class="share_nav">
						<li><a href="#"><img src="~/images/facebook.png" title="facebook" /></a></li>
						<li><a href="#"><img src="~/images/twitter.png" title="Twitter" /></a></li>
						<li><a href="#"><img src="~/images/rss.png" title="Rss" /></a></li>
						<li><a href="#"><img src="~/images/gpluse.png" title="Google+" /></a></li>
					</ul>
				</div>
			</div>
			<div class="clearfix"> </div>
		</div>

		<div class="toogle">
			<h3 class="m_3">Product Details</h3>
			<p class="m_text">
				<strong>Product Name:</strong> @Model.Name<br />
				<strong>Price:</strong> $@Model.Price<br />
				<strong>Category:</strong> @(Model.Category?.Name ?? "Uncategorized")<br />
				<br />
				This product is carefully selected for quality and value. 
				Shop with confidence knowing you're getting a great deal!
			</p>
		</div>

		<div class="back-to-products">
			<a asp-controller="Products" asp-action="Index" class="btn btn-primary">Back to Products</a>
			@if (isAuth)
			{
				<a asp-controller="Products" asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning">Edit Product</a>
			}
		</div>
	</div>
</div>

<!---->
<div class="footer">
	<div class="footer-top">
		<div class="container">
			<div class="latter">
				<h6>NEWS-LETTER</h6>
				<div class="sub-left-right">
					<form>
						<input type="text" value="Enter email here" onfocus="this.value = '';" onblur="if (this.value == '') {this.value = 'Enter email here';}" />
						<input type="submit" value="SUBSCRIBE" />
					</form>
				</div>
				<div class="clearfix"> </div>
			</div>
			<div class="latter-right">
				<p>FOLLOW US</p>
				<ul class="face-in-to">
					<li><a href="#"><span> </span></a></li>
					<li><a href="#"><span class="facebook-in"> </span></a></li>
					<div class="clearfix"> </div>
				</ul>
				<div class="clearfix"> </div>
			</div>
			<div class="clearfix"> </div>
		</div>
	</div>
	<div class="footer-bottom">
		<div class="container">
			<div class="footer-bottom-cate">
				<h6>QUICK LINKS</h6>
				<ul>
					<li><a asp-controller="Home" asp-action="Index">Home</a></li>
					<li><a asp-controller="Products" asp-action="Index">Products</a></li>
					<li><a asp-controller="Home" asp-action="Contact">Contact</a></li>
				</ul>
			</div>
			<div class="clearfix"> </div>
		</div>
	</div>
</div>
