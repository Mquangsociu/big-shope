@model List<wed_project.Models.Product>

@{
    ViewData["Title"] = "Thanh toán";
}

<h2>Trang thanh toán</h2>

@if (Model.Count == 0)
{
    <p>Giỏ hàng trống</p>
}
else
{
    <table class="table">
        <thead>
            <tr>
                <th>Tên sản phẩm</th>
                <th>Giá</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Name</td>
                    <td>@item.Price</td>
                </tr>
            }
        </tbody>
    </table>

    <h4>
        Tổng tiền:
        @Model.Sum(x => x.Price)
    </h4>

    <button class="btn btn-primary">
        Xác nhận thanh toán
    </button>
}
