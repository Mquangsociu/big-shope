@{
    ViewData["Title"] = "Dashboard";
}

<div class="row">
    <div class="col-md-6 mb-4">
        <div class="card bg-primary text-white">
            <div class="card-body">
                <h5 class="card-title">Tổng Danh Mục</h5>
                <h2>@ViewBag.TotalCategories</h2>
                <a asp-controller="Categories" asp-action="Index" class="btn btn-light btn-sm">Xem chi tiết</a>
            </div>
        </div>
    </div>
    <div class="col-md-6 mb-4">
        <div class="card bg-success text-white">
            <div class="card-body">
                <h5 class="card-title">Tổng Sản Phẩm</h5>
                <h2>@ViewBag.TotalProducts</h2>
                <a asp-controller="Products" asp-action="Index" class="btn btn-light btn-sm">Xem chi tiết</a>
            </div>
        </div>
    </div>
</div>

<div class="card">
    <div class="card-header">
        <h4>Quản Lý Hệ Thống</h4>
    </div>
    <div class="card-body">
        <div class="list-group">
            <a asp-controller="Categories" asp-action="Create" class="list-group-item list-group-item-action">
                <strong>Tạo Danh Mục Mới</strong>
                <p class="mb-0 text-muted">Thêm danh mục sản phẩm mới vào hệ thống</p>
            </a>
            <a asp-controller="Products" asp-action="Create" class="list-group-item list-group-item-action">
                <strong>Thêm Sản Phẩm Mới</strong>
                <p class="mb-0 text-muted">Thêm sản phẩm mới vào cửa hàng</p>
            </a>
            <a asp-controller="Categories" asp-action="Index" class="list-group-item list-group-item-action">
                <strong>Quản Lý Danh Mục</strong>
                <p class="mb-0 text-muted">Xem, sửa, xóa danh mục</p>
            </a>
            <a asp-controller="Products" asp-action="Index" class="list-group-item list-group-item-action">
                <strong>Quản Lý Sản Phẩm</strong>
                <p class="mb-0 text-muted">Xem, sửa, xóa sản phẩm</p>
            </a>
        </div>
    </div>
</div>

