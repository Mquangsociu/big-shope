@model BigShope.Models.Order
@{
    ViewData["Title"] = "Order Confirmation";
}

<div class="container">
    <div class="account_grid">
        <h3>ORDER CONFIRMATION</h3>
        <div class="alert alert-success">
            <h4>Thank you for your order!</h4>
            <p>Your order has been placed successfully. Order ID: <strong>#@Model.OrderId</strong></p>
        </div>
        
        <div class="row">
            <div class="col-md-6">
                <h4>Order Details</h4>
                <p><strong>Order Date:</strong> @Model.OrderDate.ToString("MMMM dd, yyyy")</p>
                <p><strong>Status:</strong> @Model.Status</p>
                <p><strong>Total Amount:</strong> $@Model.TotalAmount.ToString("F2")</p>
            </div>
            
            <div class="col-md-6">
                <h4>Shipping Information</h4>
                <p><strong>Customer Name:</strong> @Model.CustomerName</p>
                <p><strong>Address:</strong> @Model.ShippingAddress</p>
                <p><strong>Phone:</strong> @Model.PhoneNumber</p>
                @if (!string.IsNullOrEmpty(Model.Email))
                {
                    <p><strong>Email:</strong> @Model.Email</p>
                }
            </div>
        </div>
        
        <h4>Order Items</h4>
        <table class="table">
            <thead>
                <tr>
                    <th>Product</th>
                    <th>Quantity</th>
                    <th>Unit Price</th>
                    <th>Total</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.OrderDetails)
                {
                    <tr>
                        <td>@item.Product?.Name</td>
                        <td>@item.Quantity</td>
                        <td>$@item.UnitPrice.ToString("F2")</td>
                        <td>$@item.TotalPrice.ToString("F2")</td>
                    </tr>
                }
            </tbody>
        </table>
        
        <div style="margin-top: 20px;">
            <a asp-controller="Home" asp-action="Index" class="btn btn-primary">Continue Shopping</a>
        </div>
    </div>
</div>
