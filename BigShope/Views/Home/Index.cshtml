        <div class="shoes-grid-left">
            <a asp-controller="Products" asp-action="Index">
                <div class="col-md-6 con-sed-grid">
                    <div class="elit-grid">
                        <h4>consectetur elit</h4>
                        <label>FOR ALL PURCHASE VALUE</label>
                        <p>Lorem ipsum dolor sit amet, consectetur adipisicing elit,</p>
                        <span class="on-get">GET NOW</span>
                    </div>
                    <img class="img-responsive shoe-left" src="~/images/sh.jpg" alt=" " />
                    <div class="clearfix"> </div>
                </div>
            </a>
            <a asp-controller="Products" asp-action="Index">
                <div class="col-md-6 con-sed-grid sed-left-top">
                    <div class="elit-grid">
                        <h4>consectetur elit</h4>
                        <label>FOR ALL PURCHASE VALUE</label>
                        <p>Lorem ipsum dolor sit amet, consectetur adipisicing elit,</p>
                        <span class="on-get">GET NOW</span>
                    </div>
                    <img class="img-responsive shoe-left" src="~/images/wa.jpg" alt=" " />
                    <div class="clearfix"> </div>
                </div>
            </a>
        </div>

        <!-- Latest Products Section -->
        <div class="products">
            <h5 class="latest-product">LATEST PRODUCTS</h5>
            <a class="view-all" asp-controller="Products" asp-action="Index">VIEW ALL<span> </span></a>
        </div>
        <div class="product-left">
            @if (ViewBag.NewProducts != null)
            {
                @foreach (BigShope.Models.Product product in ViewBag.NewProducts)
                {
                    <div class="col-md-4 chain-grid">
                        <a asp-controller="Products" asp-action="Details" asp-route-id="@product.ProductId">
                            <img class="img-responsive chain" src="@(string.IsNullOrEmpty(product.ImageUrl) ? "~/images/ch.jpg" : product.ImageUrl)" alt="@product.Name" />
                        </a>
                        <span class="star"> </span>
                        <div class="grid-chain-bottom">
                            <h6><a asp-controller="Products" asp-action="Details" asp-route-id="@product.ProductId">@product.Name</a></h6>
                            <div class="star-price">
                                <div class="dolor-grid">
                                    <span class="actual">$@product.Price</span>
                                    @if (product.PromotionalPrice.HasValue)
                                    {
                                        <span class="reducedfrom">$@product.PromotionalPrice</span>
                                    }
                                    <span class="rating">
                                        <input type="radio" class="rating-input" id="rating-input-@product.ProductId-5" name="rating-input-@product.ProductId">
                                        <label for="rating-input-@product.ProductId-5" class="rating-star1"> </label>
                                        <input type="radio" class="rating-input" id="rating-input-@product.ProductId-4" name="rating-input-@product.ProductId">
                                        <label for="rating-input-@product.ProductId-4" class="rating-star1"> </label>
                                        <input type="radio" class="rating-input" id="rating-input-@product.ProductId-3" name="rating-input-@product.ProductId">
                                        <label for="rating-input-@product.ProductId-3" class="rating-star"> </label>
                                        <input type="radio" class="rating-input" id="rating-input-@product.ProductId-2" name="rating-input-@product.ProductId">
                                        <label for="rating-input-@product.ProductId-2" class="rating-star"> </label>
                                        <input type="radio" class="rating-input" id="rating-input-@product.ProductId-1" name="rating-input-@product.ProductId">
                                        <label for="rating-input-@product.ProductId-1" class="rating-star"> </label>
                                    </span>
                                </div>
                                <form method="post" asp-controller="Cart" asp-action="AddToCart" style="display:inline;">
                                    @Html.AntiForgeryToken()
                                    <input type="hidden" name="productId" value="@product.ProductId" />
                                    <input type="hidden" name="quantity" value="1" />
                                    <button type="submit" class="now-get get-cart">ADD TO CART</button>
                                </form>
                                <div class="clearfix"> </div>
                            </div>
                        </div>
                    </div>
                }
            }
            <div class="clearfix"> </div>
        </div>

        <!-- Promotional Products Section -->
        <div class="products">
            <h5 class="latest-product">PROMOTIONAL PRODUCTS</h5>
            <a class="view-all" asp-controller="Products" asp-action="Index">VIEW ALL<span> </span></a>
        </div>
        <div class="product-left">
            @if (ViewBag.PromotionalProducts != null)
            {
                @foreach (BigShope.Models.Product product in ViewBag.PromotionalProducts)
                {
                    <div class="col-md-4 chain-grid">
                        <a asp-controller="Products" asp-action="Details" asp-route-id="@product.ProductId">
                            <img class="img-responsive chain" src="@(string.IsNullOrEmpty(product.ImageUrl) ? "~/images/bott.jpg" : product.ImageUrl)" alt="@product.Name" />
                        </a>
                        <span class="star"> </span>
                        <div class="grid-chain-bottom">
                            <h6><a asp-controller="Products" asp-action="Details" asp-route-id="@product.ProductId">@product.Name</a></h6>
                            <div class="star-price">
                                <div class="dolor-grid">
                                    @if (product.PromotionalPrice.HasValue)
                                    {
                                        <span class="actual">$@product.PromotionalPrice</span>
                                        <span class="reducedfrom">$@product.Price</span>
                                    }
                                    else
                                    {
                                        <span class="actual">$@product.Price</span>
                                    }
                                    <span class="rating">
                                        <input type="radio" class="rating-input" id="rating-input-p-@product.ProductId-5" name="rating-input-p-@product.ProductId">
                                        <label for="rating-input-p-@product.ProductId-5" class="rating-star1"> </label>
                                        <input type="radio" class="rating-input" id="rating-input-p-@product.ProductId-4" name="rating-input-p-@product.ProductId">
                                        <label for="rating-input-p-@product.ProductId-4" class="rating-star1"> </label>
                                        <input type="radio" class="rating-input" id="rating-input-p-@product.ProductId-3" name="rating-input-p-@product.ProductId">
                                        <label for="rating-input-p-@product.ProductId-3" class="rating-star"> </label>
                                        <input type="radio" class="rating-input" id="rating-input-p-@product.ProductId-2" name="rating-input-p-@product.ProductId">
                                        <label for="rating-input-p-@product.ProductId-2" class="rating-star"> </label>
                                        <input type="radio" class="rating-input" id="rating-input-p-@product.ProductId-1" name="rating-input-p-@product.ProductId">
                                        <label for="rating-input-p-@product.ProductId-1" class="rating-star"> </label>
                                    </span>
                                </div>
                                <form method="post" asp-controller="Cart" asp-action="AddToCart" style="display:inline;">
                                    @Html.AntiForgeryToken()
                                    <input type="hidden" name="productId" value="@product.ProductId" />
                                    <input type="hidden" name="quantity" value="1" />
                                    <button type="submit" class="now-get get-cart">ADD TO CART</button>
                                </form>
                                <div class="clearfix"> </div>
                            </div>
                        </div>
                    </div>
                }
            }
            <div class="clearfix"> </div>
        </div>

        <!-- Categories Section -->
        @if (ViewBag.Categories != null && ViewBag.Categories.Count > 0)
        {
            <div class="products">
                <h5 class="latest-product">SHOP BY CATEGORY</h5>
            </div>
            <div class="product-left">
                @foreach (var category in ViewBag.Categories)
                {
                    <div class="col-md-3" style="margin-bottom: 20px;">
                        <a asp-controller="Products" asp-action="Index" asp-route-categoryId="@category.CategoryId" class="btn btn-primary btn-block">
                            @category.Name
                        </a>
                    </div>
                }
                <div class="clearfix"> </div>
            </div>
        }
    </div>
</div>
