@model BigShope.Models.ViewModels.LoginViewModel
@{
    ViewData["Title"] = "Login";
}

<div class="container">
    <div class="account_grid">
        <div class="login-right">
            <h3>REGISTERED CUSTOMERS</h3>
            <p>If you have an account with us, please log in.</p>
            <form asp-action="Login" method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div>
                    <span asp-validation-for="Email" class="text-danger"></span>
                    <span>Email Address<label>*</label></span>
                    <input asp-for="Email" type="text" />
                </div>
                <div>
                    <span asp-validation-for="Password" class="text-danger"></span>
                    <span>Password<label>*</label></span>
                    <input asp-for="Password" type="password" />
                </div>
                <div>
                    <input asp-for="RememberMe" type="checkbox" />
                    <label asp-for="RememberMe">Remember me?</label>
                </div>
                <a class="forgot" href="#">Forgot Your Password?</a>
                <input type="submit" value="Login">
                @Html.AntiForgeryToken()
            </form>
        </div>
        <div class="login-left">
            <h3>NEW CUSTOMERS</h3>
            <p>By creating an account with our store, you will be able to move through the checkout process faster, store multiple shipping addresses, view and track your orders in your account and more.</p>
            <a class="acount-btn" asp-controller="Account" asp-action="Register">Create an Account</a>
        </div>
        <div class="clearfix"> </div>
    </div>
    <div class="sub-cate">
        <div class="top-nav rsidebar span_1_of_left">
            <h3 class="cate">CATEGORIES</h3>
            <ul class="menu">
                @if (ViewBag.FooterCategories != null)
                {
                    @foreach (var category in ViewBag.FooterCategories)
                    {
                        <li><a asp-controller="Products" asp-action="Index" asp-route-categoryId="@category.CategoryId">@category.Name</a></li>
                    }
                }
            </ul>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
