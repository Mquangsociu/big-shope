@{
    ViewData["Title"] = "My Account";
}

<div class="main">
    <div class="container">
        <div class="account-page">
            <h3 class="account-head">My Account</h3>
            <div class="account-info">
                <div class="account-details">
                    <h4>Welcome, @ViewBag.UserName!</h4>
                    <div style="margin-top: 20px;">
                        <h5>Account Information</h5>
                        <p><strong>Email:</strong> @ViewBag.UserName</p>
                        <p><strong>Account Status:</strong> Active</p>
                    </div>
                    
                    <div style="margin-top: 30px;">
                        <h5>Quick Actions</h5>
                        <ul style="list-style: none; padding: 0;">
                            <li style="margin: 10px 0;">
                                <a asp-controller="Products" asp-action="Index" class="btn btn-primary">Browse Products</a>
                            </li>
                            <li style="margin: 10px 0;">
                                <a asp-controller="Cart" asp-action="Index" class="btn btn-success">View Shopping Cart</a>
                            </li>
                            @if (User?.IsInRole("Admin") == true || User?.Identity?.IsAuthenticated == true)
                            {
                                <li style="margin: 10px 0;">
                                    <a asp-controller="ProductManagement" asp-action="Index" class="btn btn-warning">Manage Products</a>
                                </li>
                                <li style="margin: 10px 0;">
                                    <a asp-controller="CategoryManagement" asp-action="Index" class="btn btn-info">Manage Categories</a>
                                </li>
                            }
                        </ul>
                    </div>

                    <div style="margin-top: 30px;">
                        <form method="post" asp-controller="Account" asp-action="Logout">
                            @Html.AntiForgeryToken()
                            <button type="submit" class="btn btn-danger">Logout</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
